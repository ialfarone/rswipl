PKG_CPPFLAGS=-I../inst/swipl/lib/swipl/include -D_REENTRANT -D__SWI_PROLOG__ -D__SWI_EMBEDDED__
PKG_LIBS=`pkg-config ../inst/swipl/share/pkgconfig/swipl.pc --libs`
OS=$(shell ${R_HOME}/bin/R -e "cat(R.version[['os']])" -s)

all: $(SHLIB)

$(SHLIB): RcppExports.o rswipl.o

rswipl.o: swipl

swipl: ../linux/done

../linux/done:
	mkdir -p ../linux
	echo $(OS)
ifeq ("$(OS)","linux-gnu")
	cd ../linux && cmake -DCMAKE_INSTALL_PREFIX=../inst/swipl -DINSTALL_DOCUMENTATION=OFF -DSWIPL_PACKAGES_JAVA=OFF -DSWIPL_PACKAGES_X=OFF -DSWIPL_PACKAGES_ODBC=OFF -DUSE_GMP=OFF -DSWIPL_SHARED_LIB=OFF -DSWIPL_STATIC_LIB=ON -DCMAKE_POSITION_INDEPENDENT_CODE=ON -DCMAKE_BUILD_TYPE=Release -S ../src/swipl-devel
	cd ../linux && $(MAKE) -j1
	cd ../linux && $(MAKE) -j1 install
else
	cd ../linux && cmake -DCMAKE_INSTALL_PREFIX=../inst/swipl -DINSTALL_DOCUMENTATION=OFF -DSWIPL_PACKAGES_JAVA=OFF -DSWIPL_PACKAGES_X=OFF -DSWIPL_PACKAGES_ODBC=OFF -DUSE_GMP=OFF -DBUILD_TESTING=OFF -DCMAKE_BUILD_TYPE=Release -S ../src/swipl-devel
	cd ../linux && $(MAKE) -j1
	cd ../linux && $(MAKE) -j1 install	
endif
	rm ../inst/swipl/bin/swipl
	rm ../inst/swipl/bin/swipl-ld
	-rm ../inst/swipl/lib/swipl/bin/*/swipl
	-rm ../inst/swipl/lib/swipl/bin/*/swipl-ld
	touch ../linux/done
